---
import { Image } from 'astro:assets';
import Logo from '@assets/Logo.svg';
import { BackButton } from '@components/core';

const { backbtn } = Astro.props
---

<div class="w-full md:h-[150px] flex items-center p-8 md:p-12 fixed top-0 gap-6 z-1000">
  <a href="/"><Image src={Logo} alt="" height={50} width={50} loading="lazy" /></a>
  {
    backbtn && (
      <BackButton url="" />
    )
  }
</div>
